<h1>Editing: <%=@movie.title%></h1>

<%= form_with(model: @movie) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_area :description, rows: 7 %>

<%= f.label :rating %>
<%= f.text_field :rating %>

<%= f.label :released_on %>
<%= f.date_field :released_on %>

<%= f.label :total_gross %>
<%= f.number_field :total_gross %>

<%=f.submit%>
<% end %>